
@{
    ViewBag.Title = "JobSingle";
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('../Content/images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Job Detail</h1>
                <div class="custom-breadcrumbs">
                    <a href="~/Home/Index">Home</a> <span class="mx-2 slash">/</span>
                    <a href="#">Job Single</a> <span class="mx-2 slash">/</span> 
                </div>
            </div>
        </div>
    </div>
</section>

@if (ViewBag.PostSing.Count != 0)
{
    foreach (var PostSing in ViewBag.PostSing)
    {
        <section class="site-section">
            <div class="container">
                <div class="row align-items-center mb-5">
                    <div class="col-lg-8 mb-4 mb-lg-0">
                        <div class="d-flex align-items-center">
                            <div class="border p-2 d-inline-block mr-3 rounded"> 
                                    <img src="~/Content/images/LOGO/@PostSing.Logo_Image" alt="No Image" width="100">                                 
                            </div>
                            <div>
                                <h2></h2>
                                <h5 class="section-title font-weight-bold mb-2" style="font-size:26px;">@PostSing.JOB_Title</h5>
                                <h5 class="section-title font-weight-bold mb-2" style="font-size:20px;">@PostSing.BU_Loaction</h5>

                                <div>
                                    <span class="ml-0 mr-2 mb-2"><span class="icon-briefcase mr-2"></span>@PostSing.JOB_Region</span>
                                    <span class="m-2"><span class="icon-room mr-2"></span>@PostSing.JOB_Location</span>
                                    <span class="m-2"><span class="icon-clock-o mr-2"></span><span class="text-primary">@PostSing.JOB_Type</span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-6" hidden>
                                <a href="#" class="btn btn-block btn-light btn-md"><span class="icon-heart-o mr-2 text-danger"></span>Save Job</a>
                            </div>
                            <div class="col-6">
                                <a href="~/Home/JobListChevron?JOB=@PostSing.ID" class="btn btn-block btn-primary btn-md">Apply Now</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <div class="mb-5">
                            <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-align-left mr-3"></span>Job Description</h3>
                            
                            <textarea type="text" rows="8" class="form-control" id="Job-description" placeholder="Job Description!" readonly>@PostSing.JOB_Description</textarea>
                        </div>

                        <div class="mb-5">
                            <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-rocket mr-3"></span>Job Requirement!</h3>
                            <textarea type="text" rows="8" class="form-control" id="Job-description" placeholder="Write Job Description!" readonly>@PostSing.JOB_Requirement</textarea>

                        </div>

                        <div class="mb-5" hidden>
                            <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-book mr-3"></span>Education + Experience</h3>
                            <ul class="list-unstyled m-0 p-0">
                                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Necessitatibus quibusdam facilis</span></li>
                                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Velit unde aliquam et voluptas reiciendis non sapiente labore</span></li>
                                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Commodi quae ipsum quas est itaque</span></li>
                                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Lorem ipsum dolor sit amet, consectetur adipisicing elit</span></li>
                                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Deleniti asperiores blanditiis nihil quia officiis dolor</span></li>
                            </ul>
                        </div>

                        <div class="mb-5" hidden>
                            <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-turned_in mr-3"></span>Other Benifits</h3>
                            <ul class="list-unstyled m-0 p-0">
                                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Necessitatibus quibusdam facilis</span></li>
                                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Velit unde aliquam et voluptas reiciendis non sapiente labore</span></li>
                                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Commodi quae ipsum quas est itaque</span></li>
                                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Lorem ipsum dolor sit amet, consectetur adipisicing elit</span></li>
                                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Deleniti asperiores blanditiis nihil quia officiis dolor</span></li>
                            </ul>
                        </div>

                        <div class="row mb-5">
                            <div class="col-6" hidden>
                                <a href="#" class="btn btn-block btn-light btn-md"><span class="icon-heart-o mr-2 text-danger"></span>Save Job</a>
                            </div>
                            <div class="col-6" hidden>
                                <a href="#" class="btn btn-block btn-primary btn-md">Apply Now</a>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4">
                        <div class="bg-light p-3 border rounded mb-4">
                            <h3 class="text-primary  mt-3 h5 pl-3 mb-3 ">Job Summary</h3>
                            <ul class="list-unstyled pl-3 mb-0">
                                <li class="mb-2"><strong class="text-black">Published on:</strong> @PostSing.JOB_UpdateDate</li>
                                <li class="mb-2"><strong class="text-black">Job Close:</strong> @PostSing.Job_Close</li>
                                <li class="mb-2"><strong class="text-black">Employment Status:</strong> @PostSing.JOB_Type</li>
                                <li class="mb-2"><strong class="text-black">Experience:</strong> @PostSing.Experience</li>
                                <li class="mb-2"><strong class="text-black">Job Location:</strong> @PostSing.JOB_Location</li>
                                <li class="mb-2"><strong class="text-black">Rotational Roster:</strong> @PostSing.Job_Rotational_Roster</li>
                                <li class="mb-2"><strong class="text-black">Travel Requirement:</strong> @PostSing.Job_Travel_Requirement</li>
                                <li class="mb-2" hidden><strong class="text-black">Salary:</strong> @PostSing.Salary</li>
                                <li class="mb-2" hidden><strong class="text-black">Gender:</strong> @PostSing.Gender</li>
                                <li class="mb-2"><strong class="text-black">Status</strong> Open</li>
                            </ul>
                        </div>

                        <div class="bg-light p-3 border rounded"hidden>
                            <h3 class="text-primary  mt-3 h5 pl-3 mb-3 ">Share</h3>
                            <div class="px-3">
                                <a href="#" class="pt-3 pb-3 pr-3 pl-0"><span class="icon-facebook"></span></a>
                                <a href="#" class="pt-3 pb-3 pr-3 pl-0"><span class="icon-twitter"></span></a>
                                <a href="#" class="pt-3 pb-3 pr-3 pl-0"><span class="icon-linkedin"></span></a>
                                <a href="#" class="pt-3 pb-3 pr-3 pl-0"><span class="icon-pinterest"></span></a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    }
}
