@{
    ViewBag.Title = "Home Page";
}
@Scripts.Render("~/HomeIndex/js")
<section class="home-section section-hero overlay  bg-image" style="background-image: url('/ADS-JOB/Content/images/hero_1.jpg');" id="home-section">

    <!--<section class="section-hero overlay inner-page bg-image" style="background-image: url('../Content/images/hero_1.jpg');" id="home-section"> -->
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-12">

                <div class="mb-5 text-center" style="margin-top:10%">
                    <h1 class="text-white font-weight-bold">The Easiest Way To Get Your Dream Job</h1>
                    <h2 class="text-white font-weight-bold">And Apply With Just 1 Click</h2>
                    <p>ค้นหางานที่ตรงกับความต้องการของคุณ...</p>
                </div>
                <form method="post" class="search-jobs-form">
                    <div class="row mb-5">
                        <div class="col-xl-2  col-md-1 col-lg-2 mb-4 mb-lg-0">

                        </div>
                        <div class="col-xl-3 col-sm-6 col-md-5 col-lg-4 mb-4 mb-lg-0">
                            <div class="form-control form-control-lg">
                                <select class="selectpicker" data-live-search="true" id="TitleS" title='ค้นหาจากตำแหน่ง...'>
                                    @foreach (var PostJob in ViewBag.PostJob)
                                    {
                                        <option value="@PostJob.JOB_Title">@PostJob.JOB_Title</option>

                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-xl-3 col-sm-6 col-md-5 col-lg-4 mb-4 mb-lg-0">
                            <div class="form-control form-control-lg">
                                <select class="selectpicker" data-live-search="true" id="DepartmentS" title='ค้นหาจากแผนก...'>
                                    @foreach (var PostJob in ViewBag.Dep)
                                    {
                                        <option value="@PostJob.Department_Name">@PostJob.Department_Name</option>

                                    }
                                </select>
                            </div>
                        </div>

                        <!--   <div class="col-12 col-sm-5 col-md-5 col-lg-3 mb-4 mb-lg-0" hidden>
        <input id="TitleS" type="text" class="form-control form-control-lg" placeholder="Job title">
    </div>
     -->
                        <div class="col-xl-3 col-sm-5 col-md-5 col-lg-4 mb-4 mb-lg-0">
                            <a href="#" id="Search_Job" class="btn btn-primary btn-lg btn-block text-white btn-search"><span class="icon-search icon mr-2"></span>Search Job</a>

                        </div>
                        <div class="col-xl-3 col-sm-1col-md-1 col-lg-2 mb-4 mb-lg-0">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

</section>
<section class="site-section">
    <div class="container">

        <div class="row mb-5 justify-content-center">
            <div class="col-md-7 text-center"> 
                <h5 class="section-title font-weight-bold mb-2"><a style="text-decoration: underline;font-size:22px;">@ViewBag.PostJob.Count รายการ</a></h5>
            </div>
        </div>

        <ul class="job-listings mb-5">

            @if (ViewBag.PostJob.Count != 0)
            {
                foreach (var PostJob in ViewBag.PostJob)
                {
                    <li class="job-listing d-block d-sm-flex pb-3 pb-sm-0 align-items-center">
                        <a href="~/Home/JobSingle?JOB=@PostJob.ID"></a>
                        <div class="job-listing-logo">
                            @if (@PostJob.Logo_Image != null)
                            {
                                <img src="~/Content/images/LOGO/@PostJob.Logo_Image" alt="  No Logo" class="img-fluid">
                            }
                            else
                            { <img src="~/Content/images/ads_icon.ico" alt="No Logo" class="img-fluid">}

                        </div>

                        <div class="job-listing-about d-sm-flex custom-width w-100 justify-content-between mx-4">
                            <div class="job-listing-position custom-width w-50 mb-3 mb-sm-0">
                                @PostJob.JOB_Title<br />
                                <strong>บริษัท @PostJob.Company_Name</strong><br />
                                <strong>Update @PostJob.JOB_UpdateDate</strong><br />
                                <strong>แผนก @PostJob.JOB_Region</strong>
                            </div>
                            <div class="job-listing-location mb-3 mb-sm-0 custom-width w-25">
                                <span class="icon-check"> Experience: @PostJob.Experience</span><br />
                                <span class="icon-check"> Salary: @PostJob.Salary</span><br />
                                <span class="icon-check"> Gender: @PostJob.Gender</span><br />
                            </div>
                            <div class="job-listing-meta">
                                @if (@PostJob.JOB_Type == "Part Time")
                                {<span class="badge badge-danger">@PostJob.JOB_Type</span>}

                                @if (@PostJob.JOB_Type == "Full Time")
                                {<span class="badge badge-success"style="background-color:#2114c4">@PostJob.JOB_Type</span>}
                            </div>
                        </div>

                    </li>



                }
            }





        </ul>

        <div class="row pagination-wrap" hidden>
            <div class="col-md-6 text-center text-md-left mb-4 mb-md-0">
                <span>Showing 1-10 Of @ViewBag.PostJob.Count Jobs</span>
            </div>
            <div class="col-md-6 text-center text-md-right">
                <div class="custom-pagination ml-auto">
                    <a href="#" class="prev">Prev</a>
                    <div class="d-inline-block">
                        <a href="#" class="active">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#">4</a>
                    </div>
                    <a href="#" class="next">Next</a>
                </div>
            </div>
        </div>

    </div>
</section>

